@model FinancialPortal.Models.Budgets

@{
    ViewBag.Title = "Details";
}

<h2>Budget</h2>

<hr />
<div class="col-lg-6 col-sm-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold">Budget Items</h6>
        </div>
        <div class="card-body">         
            <p>
                <a href="@Url.Action("Create", "BudgetItems")">Create New Budget Item</a>
            </p>
            <table class="table table-bordered" width="100%" cellspacing="0">
                <tr>

                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("Category")
                    </th>
                    <th>
                        @Html.DisplayName("Amount")
                    </th>
                    <th>
                        @Html.DisplayName("Frequency")
                    </th>
                    <th></th>

                </tr>

                @foreach (var item in Model.BudgetItems.OrderByDescending(c => c.Created))
                {
                    <tr>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modeItem => item.BudgetItemCatagory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Frequency)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "BudgetItems", new { id = item.Id })">Edit</a> |
                            <a href="@Url.Action("Delete", "BudgetItems", new { id = item.Id })">Delete</a>
                        </td>

                    </tr>
                }

            </table>

        </div>
    </div>
</div>
